{{!< default}}
<section class="wrap">
  <h1 class="page-title">Photography</h1>

  {{#post}}
    {{content}}
  {{/post}}
</section>

<section class="photo-wrap">

  {{#get "posts" limit="all" include="author,tags" filter="tag:photography"}}

    {{#foreach posts}}
        <article class="tag-photography">
          <a class="pg-link-cover" href="https://danielgynn.exposure.co{{url}}" target="_blank"></a>
          <img class="pg-cover" src="{{@image}}" />
          <div class="pg-content">
            <a href="https://danielgynn.exposure.co{{url}}" target="_blank">
              <div class="pg-meta">
                <h1>{{{title}}}</h1>
                <h3><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM DD, YYYY'}}</time></h3>
              </div>
            </a>
          </div>
        </article>
    {{/foreach}}

  {{/get}}

</section>
