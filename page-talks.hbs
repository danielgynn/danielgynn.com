{{!< default}}
<section class="wrap">

  {{#post}}
    {{content}}
  {{/post}}

  <h1 class="page-title">Recent Talks</h1>
  <!-- <img src="http://i.imgur.com/ra2FbuC.jpg" /> -->

  <hr class="fancy-div">


  {{#get "posts" limit="all" include="author,tags" filter="tag:talks"}}

    {{#foreach posts}}
      <article class="{{post_class}}">
        <section class="list-content home-list">
          <h5 class="mini-post-header">
            <a href="{{url}}">{{{title}}}</a>
          </h5>
          <span class="time-blocks"><time datetime="{{date format="DD-MM-YY"}}">{{date format='DD MMMM, YYYY'}}</time></span>
          <section class="post-excerpt">
            <p>{{excerpt words="22"}}<a class="read-more" href="{{url}}">...</a></p>
          </section>
        </section>
      </article>
    {{/foreach}}

  {{/get}}

</section>
