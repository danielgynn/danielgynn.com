{{#get "posts" limit="3" include="author,tags" filter="tag:photography"}}
  <section class="wrap">
    <h1 class="page-subtitle">Recent Photography</h1>
    {{#foreach posts}}
      <article>
        <section class="photography-thumb list-content home-list">
          <div class="post-text">
            <h5 class="cover-heading">
              <a class="post-title-link" href="https://danielgynn.exposure.co{{url}}" target="_blank">{{{title}}}</a>
            </h5>
            <span class="time-blocks"><time datetime="{{date format="DD-MM-YY"}}">{{date format='DD MMMM, YYYY'}}</time></span>
            <p>{{excerpt words="22"}}<a class="read-more" href="https://danielgynn.exposure.co{{url}}" target="_blank">...</a></p>
          </div>
          <a class="post-thumbnail" href="https://danielgynn.exposure.co{{url}}" target="_blank">
            <img src="{{image}}">
          </a>
        </section>
        <hr class="no-margin">
      </article>
    {{/foreach}}
    <p><a href="/photography">See more photography...</a></p>
  </section>
{{/get}}
