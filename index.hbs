{{!< default}}
<main class="index-page">
  <section class="intro-hero">
    <div class="wrap">
      <img src="{{@blog.logo}}" class="selfie center-align" alt="selfie">
      <p class="intro-header">Hey, I'm Daniel Gynn, a frontend developer, occasional writed and all-round dork.</p>
    </div>
    <hr>
  </section>

  <section class="wrap">
    <h1 class="page-subtitle">Recent Blog Posts</h1>
    {{#get "posts" limit="3" include="author,tags" filter="tag:[learning, books]"}}
      {{#foreach posts}}
        <article class="{{post_class}}">
          <section class="list-content home-list">
            <h5 class="mini-post-header">
              <a href="{{url}}">{{{title}}}</a>
            </h5>
            <span class="time-blocks"><time datetime="{{date format="DD-MM-YY"}}">{{date format='DD MMMM, YYYY'}}</time></span>
            <section class="post-excerpt">
              <p>{{excerpt words="22"}}<a class="read-more" href="{{url}}">...</a></p>
            </section>
          </section>
          <hr class="no-margin">
        </article>
      {{/foreach}}
      <p><a href="/blog">Read more blog posts...</a></p>
    {{/get}}
  </section>

  <hr class="fancy-div">

  <section class="wrap">
    <h1 class="page-subtitle">Recent Talks</h1>
    {{#get "posts" limit="3" include="author,tags" filter="tag:talks"}}
    {{#foreach posts}}
      <article class="{{post_class}}">
        <section class="list-content home-list">
          <h5 class="mini-post-header">
            <a href="{{url}}">{{{title}}}</a>
          </h5>
          <span class="time-blocks"><time datetime="{{date format="DD-MM-YY"}}">{{date format='DD MMMM, YYYY'}}</time></span>
          <section class="post-excerpt">
            <p>{{excerpt words="22"}}<a class="read-more" href="{{url}}">...</a></p>
          </section>
        </section>
        <hr class="no-margin">
      </article>
    {{/foreach}}
    <p><a href="/talks">See more talks...</a></p>
    {{/get}}
  </section>

  <hr class="fancy-div">

  <section class="wrap">
    <h1 class="page-subtitle">Recent Photography</h1>
    {{#get "posts" limit="3" include="author,tags" filter="tag:photography"}}
    {{#foreach posts}}
      <article>
        <section class="tag-photography">
          <a class="pg-link-cover" href="https://danielgynn.exposure.co{{url}}" target="_blank"></a>
          <div class="pg-cover" style="background-image: url('{{@image}}');"></div>
          <div class="pg-content">
            <a href="https://danielgynn.exposure.co{{url}}" target="_blank">
              <div class="pg-meta">
                <h1>{{{title}}}</h1>
                <h3><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM DD, YYYY'}}</time></h3>
              </div>
            </a>
          </div>
        </section>
      </article>
    {{/foreach}}
    <p><a href="/photography">See more photography...</a></p>
    {{/get}}
  </section>
</main>
