{{!< default}}
<section class="wrap">

  <h1 class="page-title">Blog Archive</h1>
  <p>A collection of <strong>{{pages.total}}</strong> post(s) on web development and design, literature, and my own mindless ramblings about nothing in particular.</p>
  <hr class="fancy-div" />
  
  {{#post}}
    {{content}}
  {{/post}}

  {{#get "posts" limit="all" include="author,tags" filter="tag:learning, tag:books, tag:writing" as |posts pages|}}

    {{#foreach posts}}
      <article class="{{post_class}}">
        <section class="list-content">
          <header class="cover post post-head">
            <h1 class="cover-heading post-title"><a class="post-title-link" href="{{url}}">{{{title}}}</a></h1>
            <section class="blog-blocks">
    					<span class="time-blocks">Posted on <time datetime="{{date format="DD-MM-YY"}}">{{date format='DD MMMM, YYYY'}}</time> {{#if tags}}in {{tags separator=", "}}{{/if}}</span>
            </section>
          </header>
          <section class="post-excerpt">
            <div class="cover post post-body">
              <p>{{excerpt words="30"}}<a class="read-more" href="{{url}}">...</a></p>
            </div>
          </section>
        </section>
        <hr>
      </article>
    {{/foreach}}

  {{/get}}

</section>
